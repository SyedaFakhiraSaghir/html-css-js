    alert(`You picked scissor. Computer picked ${computerMove}. ${result}`);
    ">Scissors</button>
  </body>
  <script>
    function getRandomInt(max) 
    {
      result = '';
      return Math.floor(Math.random() * max);
    }
  </script>
